<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!--定义填充渐变颜色-->
    <gradient
        android:startColor="#df221a"
        android:endColor="#df221a"
        />
    <!--设置内填充-->
    <padding android:left="10dp"
        android:top="0dp"
        android:right="10dp"
        android:bottom="1dp"/>
    <stroke
        android:width="0.5dp"
        android:color="#df221a" />
    <!--设置圆角矩形-->
    <corners android:radius="30dip"/>
</shape>