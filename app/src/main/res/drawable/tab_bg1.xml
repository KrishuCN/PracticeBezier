<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <solid android:color="#FFFFFF"></solid>
            <padding
                android:bottom="10dp"
                android:left="15dp"
                android:right="15dp"
                android:top="10dp"></padding>

            <stroke
                android:width="1dp"
                android:color="@color/line"
                ></stroke>
        </shape>
    </item>
</layer-list>