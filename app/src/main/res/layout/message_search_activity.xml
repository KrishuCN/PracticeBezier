<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/hide_zhuangtailan"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/jianbianse_bac"
        android:orientation="horizontal"
        android:paddingLeft="8dp">

        <ImageView
            android:id="@+id/mes_fh"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@mipmap/back" />

        <EditText
            android:id="@+id/ms_search"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/sousuokuang"
            android:drawableLeft="@mipmap/guzhu_sousuo"
            android:gravity="center"
            android:hint="输入搜索的人"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_font_1" />

        <TextView
            android:id="@+id/ms_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/search_person_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />

</LinearLayout>
