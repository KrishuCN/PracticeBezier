<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="chen.vike.c680.activity.BuyServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/fuwu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding10">

            <ImageView
                android:id="@+id/fw_img"
                android:layout_width="@dimen/width80"
                android:layout_height="@dimen/width80"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/image_loading" />

            <TextView
                android:id="@+id/fw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/fw_img"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toEndOf="@+id/fw_img"
                android:layout_toRightOf="@+id/fw_img"
                android:maxLines="2"
                android:textColor="@color/colorInfo"
                android:textSize="@dimen/text_font_6"
                tools:text="一站式品牌" />

            <TextView
                android:id="@+id/fw_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fw_title"
                android:layout_alignStart="@+id/fw_title"
                android:layout_below="@+id/fw_title"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_font_6"
                tools:text="￥100" />

            <TextView
                android:id="@+id/fw_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fw_img"
                android:layout_alignLeft="@+id/fw_money"
                android:layout_alignStart="@+id/fw_money"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_font_2"
                tools:text="服务商：某某" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height10"
            android:background="@color/colorbg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding10"
            android:text="@string/fbxq_ts1"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_font_4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line2" />

        <EditText
            android:id="@+id/xq_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edti_text_bg"
            android:gravity="top|left"
            android:hint="如：我需要XXX"
            android:maxLines="10"
            android:minLines="10"
            android:paddingBottom="@dimen/padding5"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding5"
            android:textColorHint="@color/text_color_1"
            android:textSize="@dimen/text_font_6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height10"
            android:background="@color/colorbg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="@dimen/padding10"
                android:paddingLeft="@dimen/padding16"
                android:paddingRight="@dimen/padding10"
                android:paddingTop="@dimen/padding10"
                android:text="@string/gy_je"
                android:textColor="@color/colorInfo"
                android:textSize="@dimen/text_font_6" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="@dimen/line"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fbxq_ys"
                android:layout_toStartOf="@+id/fbxq_ys"
                android:background="@color/line2" />

            <EditText
                android:id="@+id/fbxq_ys"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView29"
                android:layout_toRightOf="@+id/textView29"
                android:background="@drawable/edti_text_bg"
                android:ems="15"
                android:gravity="center_vertical"
                android:hint="请输入您认为合适的金额"
                android:inputType="number"
                android:paddingLeft="@dimen/padding16"
                android:paddingRight="@dimen/padding16"
                android:textSize="@dimen/text_font_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="@dimen/padding10"
                android:paddingLeft="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:paddingTop="@dimen/padding10"
                android:text="元"
                android:textColor="@color/colorInfo"
                android:textSize="@dimen/text_font_6" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="@dimen/padding10"
                android:paddingLeft="@dimen/padding16"
                android:paddingRight="@dimen/padding10"
                android:paddingTop="@dimen/padding10"
                android:text="@string/gy_pho"
                android:textColor="@color/colorInfo"
                android:textSize="@dimen/text_font_6" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="@dimen/line"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fbxq_phone"
                android:layout_toStartOf="@+id/fbxq_phone"
                android:background="@color/line2" />

            <EditText
                android:id="@+id/fbxq_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView31"
                android:layout_toRightOf="@+id/textView31"
                android:background="@drawable/edti_text_bg"
                android:ems="15"
                android:gravity="center_vertical"
                android:hint="请输入你的手机号"
                android:inputType="number"
                android:paddingLeft="@dimen/padding16"
                android:paddingRight="@dimen/padding16"
                android:textSize="@dimen/text_font_4" />


        </RelativeLayout>

        <Button
            android:id="@+id/control"
            style="@style/CustomTextButton"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginTop="@dimen/margin30"
            android:text="@string/fbxq_tj" />
        <include layout="@layout/zhifu_item_show"/>
    </LinearLayout>


</ScrollView>