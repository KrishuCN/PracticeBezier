<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line"
        android:orientation="vertical"
        android:id="@+id/ll">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp">

        <TextView
            android:id="@+id/sell_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="@dimen/padding10"
            android:gravity="center_vertical"
            android:padding="@dimen/padding16"
            android:text="@string/sell_lb"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_font_6" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:id="@+id/selllinear_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/width20"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/sell_text_category1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sell_catroy"
                        android:textSize="@dimen/text_font_6" />
                    <TextView
                        android:id="@+id/sell_text_category2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sell_catroy"
                        android:textSize="@dimen/text_font_6" />

                    <TextView
                        android:id="@+id/sell_text_category3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_xg"
                        android:textColor="@color/sidebar_text_color"
                        android:textSize="@dimen/text_font_6"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_26"
                />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/width20"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_title"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/text_font_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/width10">

                <EditText
                    android:id="@+id/sell_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/sell_hint"
                    android:background="@drawable/edit_bg_color"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textColorHint="#999999"
                    android:layout_marginRight="15dp"
                    android:textSize="@dimen/text_font_6" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/width20"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_moneny"
                    android:textColor="@color/vip_back"
                    android:textSize="@dimen/text_font_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="@dimen/width10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_bg_color"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sell_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@null"
                        android:digits="1234567890."
                        android:hint="@string/sell_hintmon"
                        android:phoneNumber="true"
                        android:singleLine="true"
                        android:textColor="@color/colorText"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/text_font_6" />


                    <Spinner
                        android:id="@+id/spinner_sprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height80"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/width20">

            <ImageView
                android:id="@+id/sell_imgw"
                android:layout_width="@dimen/height60"
                android:layout_height="@dimen/height60"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:layout_width="@dimen/width10"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/sell_img"
                android:layout_width="@dimen/height60"
                android:layout_height="@dimen/height60"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_imags"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height40"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/width20"
            android:paddingRight="@dimen/width20"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/height40"
                android:layout_weight="0.5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_sall"
                    android:textSize="@dimen/text_font_8"
                    android:textColor="@color/vip_back"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/height40"
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/sell_numtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_font_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_num"
                    android:textSize="@dimen/text_font_4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_edt"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/edit_bg_color"
                android:layout_margin="10dp"
                android:padding="@dimen/width10">

                <EditText
                    android:id="@+id/sell_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="@string/sell_hinte"
                    android:maxLength="300"
                    android:maxLines="7"
                    android:textColorHint="@color/section_text_color"
                    android:textSize="@dimen/text_font_6" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vip_red"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="温馨提示：更多修改请用电脑操作"/>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/sell_commit"
                style="@style/CustomTextButton"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/margin20"
                android:layout_marginLeft="@dimen/margin16"
                android:layout_marginRight="@dimen/margin16"
                android:layout_marginTop="@dimen/margin20"
                android:background="@drawable/btn_demand_bg"
                android:text="保存修改" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>