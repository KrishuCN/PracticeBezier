<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">


    <ImageView
        android:id="@+id/vp_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/fuwushang_image" />


    <TextView
        android:id="@+id/vp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/vp_iv"
        android:paddingLeft="6dp"
        android:text="青柚文化"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium_size" />

    <!--雇佣它按钮，暂时用不到-->
    <!--<ImageView-->
        <!--android:id="@+id/vp_guyong"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@mipmap/guyonghe" />-->


    <TextView
        android:id="@+id/vp_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vp_tv"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/vp_iv"
        android:text="总成交量："
        android:textColor="#9c9c9c"
        android:textSize="@dimen/text_small_size" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp_tv1"
        android:layout_alignTop="@id/vp_tv1"
        android:layout_toRightOf="@id/vp_tv1"
        android:text="2236笔"
        android:textColor="#9c9c9c"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/vp_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vp_tv1"
        android:layout_below="@id/vp_tv1"
        android:layout_marginTop="3dp"
        android:text="诚信度："
        android:textColor="#9c9c9c"
        android:textSize="@dimen/text_small_size" />

    <ImageView
        android:id="@+id/vp_cx_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vp_tv3"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/vp_tv3"
        android:scaleType="fitXY"
        android:src="@mipmap/cx_51" />


    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/vp_tv3"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:text="100%"
        android:textColor="#f53333"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv4"
        android:layout_toLeftOf="@id/tv4"
        android:layout_toRightOf="@id/vp_cx_iv"
        android:gravity="right"
        android:text="好评率："
        android:textColor="#9c9c9c"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv5"
        android:layout_marginTop="5dp"
        android:textColor="#999" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv6"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="服务范围：LOGO设计/VI设计/海报设计/画册设计"
        android:textColor="#9c9c9c"
        android:textSize="@dimen/text_small_size" />


</RelativeLayout>
