<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招标定金："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/zb_dj_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500元"
                android:textColor="#f66a49"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/zb_dj_zhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="（已支付）"
                android:textColor="#999999"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招标赏金："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/zb_sj_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000元"
                android:textColor="#f66a49"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分期应付总赏金："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/zb_fenqi_payall_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500元"
                android:textColor="#f66a49"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="注：若该项目已支付定金，"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="则首期支付金额=第一期总金额-已付金额"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1"/>

    <ListView
        android:id="@+id/fenqi_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none" />


    <Button
        android:id="@+id/fenqi_shezhi_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f56433"
        android:padding="16dp"
        android:text="提交分期"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>
