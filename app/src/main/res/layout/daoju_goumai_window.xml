<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/doaju_number_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/goumai_xiangqing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="购买详情"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="购买数量"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">
            <Button
                android:id="@+id/btn_number_jian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:background="#f1f1f1"
                android:layout_marginRight="5dp"
                android:text="—"/>
            <Button
                android:id="@+id/btn_number"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#333333"
                android:layout_marginRight="5dp"
                android:background="#f1f1f1"
                android:text="1"/>
            <Button
                android:id="@+id/btn_number_jia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/vip_red"
                android:background="#f1f1f1"
                android:textSize="18sp"
                android:text="+"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>
    <LinearLayout
        android:id="@+id/daoju_money_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/padding16"
                android:paddingLeft="@dimen/padding16"
                android:paddingTop="@dimen/padding16"
                android:text="应付金额:    "
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_font_6" />

            <TextView
                android:id="@+id/daoju_money_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/text_font_6" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin5"
            android:background="@color/fengexian" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding16"
            android:text="@string/fk_xztgfs"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_font_6" />


        <RelativeLayout
            android:id="@+id/daoju_zhifu_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginTop="@dimen/padding10"
            android:background="@drawable/border_radius"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding10">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_alipay" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView2"
                android:drawableRight="@mipmap/right"
                android:text="支付宝"
                android:textColor="@color/colorInfo" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/daoju_zhifu_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginTop="@dimen/padding10"
            android:background="@drawable/border_radius"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding10">

            <ImageView
                android:id="@+id/WeCha_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_appwx" />

            <TextView
                android:id="@+id/WeCha_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/WeCha_logo"
                android:drawableRight="@mipmap/right"
                android:text="微信支付"
                android:textColor="@color/colorInfo" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/daoju_zhifu_yue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="@dimen/padding16"
                android:paddingRight="@dimen/padding16"
                android:paddingBottom="@dimen/padding10"
                android:paddingTop="@dimen/padding10"
                android:layout_marginLeft="@dimen/margin16"
                android:layout_marginRight="@dimen/margin16"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_radius"
                >

                <ImageView
                    android:id="@+id/sjcf_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_sjcf" />

                <TextView
                    android:id="@+id/yue_num_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sjcf_logo"
                    android:drawableRight="@mipmap/right"
                    android:text="余额" />

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding10"
            android:text="* 500元以下可以微信支付，500以上暂不支持微信支付，请使用支付宝支，谢谢你的支持与谅解."
            android:textColor="@color/colorTextButton1"
            android:textSize="@dimen/text_font_4"
            android:visibility="gone" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>
    <Button
        android:id="@+id/btn_enter_goumai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vip_red"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:visibility="gone"
        android:text="确认购买"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/wait_zhifu_data"
        android:visibility="gone"
        android:orientation="vertical">
 <ProgressBar
     android:layout_width="30dp"
     android:layout_height="30dp"
     android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="生成订单中.."/>
    </LinearLayout>
</RelativeLayout>