<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guzhu_tuisong_show">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/guzhu_tuisong_fuwus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:text="我发布的需求"/>
        <RelativeLayout
            android:id="@+id/guzhu_more"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/person_tuisong_more"
                />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginBottom="10dp"/>
    <chen.vike.c680.views.MyGridView
        android:id="@+id/tujian_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:numColumns="1"
        android:verticalSpacing="1dp"
       />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/person_wei_fabu_xuqiu">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还没有发布需求"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/person_wei_btn_fabu"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_demand_bg"
        android:textColor="@color/white"
        android:text="立即发布需求"/>
    </LinearLayout>
</LinearLayout>