<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fw_logo"
            android:layout_width="@dimen/width80"
            android:layout_height="@dimen/width80"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin16"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:scaleType="center"
            android:src="@mipmap/image_loading" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fw_logo"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginStart="@dimen/margin10"
            android:layout_toEndOf="@+id/fw_logo"
            android:layout_toRightOf="@+id/fw_logo"
            android:ellipsize="end"
            android:maxEms="16"
            android:singleLine="true"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/text_font_6"
            tools:text="服务范围" />

        <TextView
            android:id="@+id/fw_je"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/unit"
            android:textColor="@color/text_color_2"

            android:textSize="@dimen/text_font_7"
            android:textStyle="bold"
            tools:text="￥200" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fw_je"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin16"
            android:textColor="@color/login_txt_hint_color"
            android:textSize="@dimen/text_font_2"
            tools:text="起" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fw_logo"
            android:layout_alignLeft="@+id/fw_class"
            android:layout_alignStart="@+id/fw_class"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding3"
            android:paddingTop="@dimen/padding3">

            <TextView
                android:id="@+id/ctiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/text_font_2"
                tools:text="成都" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="@dimen/line"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginRight="@dimen/margin5"
                android:background="@color/text_color_5" />

            <TextView
                android:id="@+id/cjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/text_font_2"
                tools:text="已成交45" />
        </LinearLayout>


        <TextView
            android:id="@+id/fw_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_centerVertical="true"
            android:background="@drawable/text_boder"
            android:textColor="@color/text_color_11"
            android:textSize="@dimen/text_font_0"
            tools:text="平面设计" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line" />

</LinearLayout>