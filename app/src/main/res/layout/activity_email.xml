<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">




    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:padding="@dimen/padding16"
        android:text="用户名："
        android:textColor="@color/colorInfo"
        android:textSize="@dimen/text_font_6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding16"
        android:singleLine="true"
        android:textColor="@color/colorText"
        android:textColorHint="@color/text_color_1"
        android:textSize="@dimen/text_font_4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding16">

        <EditText
            android:id="@+id/code_eml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:ems="6"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingBottom="@dimen/padding5"
            android:paddingTop="@dimen/padding5"
            android:singleLine="true"
            android:textColorHint="@color/text_color_1"
            android:textSize="@dimen/text_font_8" />


        <Button
            android:id="@+id/button9_eml"
            style="@style/CustomTextButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_yzm_all"
            android:paddingLeft="@dimen/padding5"
            android:paddingRight="@dimen/padding5"
            android:text="获取验证码"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_font_2" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding16"
        android:paddingRight="@dimen/padding16">

        <Button
            android:id="@+id/button4"
            style="@style/CustomTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认提交" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="若您填写的邮箱有误，敬请联系客服修改"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_font_6" />
    </LinearLayout>


</LinearLayout>