<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!--<include layout="@layout/hide_zhuangtailan"></include>-->

    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:hint="请输入绑定手机号码"
        android:inputType="phone"
        android:padding="@dimen/padding16"
        android:singleLine="true"
        android:maxLength="11"
        android:textColorHint="@color/colorhit"
        android:textSize="@dimen/text_font_6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding16">


        <EditText
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:ems="6"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="@dimen/padding5"
            android:singleLine="true"
            android:textColorHint="@color/colorhit"
            android:textSize="@dimen/text_font_6" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/border_yzm_all"
            android:paddingLeft="@dimen/padding5"
            android:paddingRight="@dimen/padding5"
            android:text="获取验证码"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_font_2" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5"
        android:background="@color/line" />


    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="新密码：6-16位"
        android:padding="@dimen/padding16"
        android:password="true"
        android:maxLength="16"
        android:textColorHint="@color/colorhit"
        android:textSize="@dimen/text_font_6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line" />

    <EditText
        android:id="@+id/testPass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="确认密码：6-16位"
        android:inputType="textPassword"
        android:padding="@dimen/padding16"
        android:maxLength="16"
        android:textColorHint="@color/colorhit"
        android:textSize="@dimen/text_font_6" />

    <Button
        android:id="@+id/enter"
        style="@style/CustomTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginRight="@dimen/margin16"
        android:layout_marginTop="@dimen/margin20"
        android:gravity="center"
        android:text="确认修改" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin20"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/padding10">

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="400-630-6800"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_font_2" />

    </LinearLayout>

</LinearLayout>