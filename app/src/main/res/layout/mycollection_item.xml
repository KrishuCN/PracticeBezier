<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fabu_all"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding5"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding16"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/text_font_6"
            tools:text="sdfjslkdfjldsfdslfsdl" />

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding5"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding5"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_font_4"
            tools:text="金额：2000元" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding16"
            android:paddingRight="@dimen/padding16"
            android:paddingTop="@dimen/padding10">

            <TextView
                android:id="@+id/tbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_106"
                android:drawablePadding="@dimen/padding5"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_font_4"
                tools:text="15投标" />

            <Button
                android:id="@+id/control"
                style="@style/CustomTextButton1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_font_3"
                tools:text="托管赏金" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>