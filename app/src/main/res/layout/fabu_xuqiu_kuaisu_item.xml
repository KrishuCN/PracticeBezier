<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/fabu_linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
       android:layout_margin="15dp"
        android:background="@drawable/edit_bg_color">
    <EditText
        android:id="@+id/fabu_demand_content"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="8"
        android:background="@null"
        android:hint="简单输入您的需求内容"
        android:textSize="12sp"
        android:orientation="horizontal">
    </EditText>
        <RelativeLayout
            android:id="@+id/kuaisu_xuanze"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.9"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/tanchu_xiala_win"
           />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/fabu_phone_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:layout_weight="0.8"
            android:background="@drawable/edit_bg_color">
        <EditText
            android:id="@+id/fabu_phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.9"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/modify_fabu_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textColor="@color/vip_red"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone"
            android:text="点击修改"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fabu_nologin_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_bg_color"
            android:layout_weight="1.2"
            android:visibility="visible">
            <EditText
                android:id="@+id/fabu_shuru_yanzm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/line2"/>
            <Button
                android:id="@+id/fabu_huoqu_yanzm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textColor="#f47e7e"
                android:text="获取验证码"
                android:textSize="12sp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/kuaisu_btn_fabu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_demand_bg"
            android:text="预约发布需求"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/xiangxi_xuqiu"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_demand_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编写详细需求"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/fabu_right" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>