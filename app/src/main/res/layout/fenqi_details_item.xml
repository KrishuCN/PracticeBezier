<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/fenqi_details_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一期："
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fenqi_details_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#f54033"
        android:textSize="16sp"
        android:text="￥ 6000"/>

    <TextView
        android:id="@+id/fenqi_details_jine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分期金额："
        android:textColor="#494949"
        android:textSize="16sp"
        android:layout_toLeftOf="@id/fenqi_details_money"/>

    <TextView
        android:id="@+id/fenqi_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fenqi_details_num"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="任务进度：app设计图完成app设计图完成app设计图完成app设计图完成app设计图完成app设计图完成"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_below="@id/fenqi_details_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/fenqi_details_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="托管本期"
            android:textColor="#5d5d5d"
            android:textSize="16sp"
            android:background="@drawable/button_bg_bai"/>

        <Button
            android:id="@+id/fenqi_details_bt1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="已转账"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/button_bg_ju"/>







    </LinearLayout>

</RelativeLayout>
