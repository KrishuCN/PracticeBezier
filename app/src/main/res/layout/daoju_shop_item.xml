<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:background="@drawable/linear_bg_white_yuan_jiao">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/daoju_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/daoju_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="2dp"
                android:text="金牌雇主服务"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/daoju_jiaqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/vip_red"
                    android:textSize="13sp"
                    android:text="680"/>
                <TextView
                    android:id="@+id/daoju_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="元/个"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
            <Button
                android:id="@+id/daoju_goumai"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/daoju_goumai_button"
                android:textColor="@color/text_color_7"
                android:text="购买" />
        </RelativeLayout>
        <TextView
            android:id="@+id/daoju_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="   啊实打实大说法森林防火撒发货速度发好久第三方哈绥打撒打撒多芬河萨芬萨达撒会发生法撒旦啊时间很快的发顺丰的好房"
            android:lineSpacingExtra="5dp"
            android:textSize="13sp"
             />
    </LinearLayout>
</LinearLayout>