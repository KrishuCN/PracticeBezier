<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/linear_bg_white_yuan_jiao">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/over_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxEms="16"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_font_4"
            tools:text="项目编号" />
        <TextView
            android:id="@+id/myshop_zt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxEms="16"
            android:singleLine="true"
            android:textColor="#30CE86"
            android:text="已审核"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativrlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fw_logo"
            android:layout_width="@dimen/width80"
            android:layout_height="@dimen/width80"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin16"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:scaleType="center"
            android:src="@mipmap/image_loading" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@+id/fw_logo"
           android:layout_toRightOf="@+id/fw_logo"
           android:layout_alignTop="@+id/fw_logo"
           android:layout_marginLeft="@dimen/margin10"
           android:paddingRight="16dp"
           android:layout_marginStart="@dimen/margin10"
           android:layout_centerInParent="true"
           android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="16"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/text_font_8"
            tools:text="阿拉法水立方萨拉风骚阿拉法水立方萨拉风骚阿拉法水立方萨拉风骚" />

        <TextView
            android:id="@+id/fw_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:ellipsize="end"
            android:maxEms="16"
            android:textSize="@dimen/text_font_8"
            android:layout_marginTop="5dp"
            android:textColor="@color/vip_red"
            tools:text="￥5000" />
       </LinearLayout>
    </RelativeLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/linear_bg_white_yuan_jiao"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fuwu_zhuangtai_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="状态"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/myshop_yl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/myshop_xiugai_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/daoju_bianji"/>
            <TextView
                android:id="@+id/myshop_yls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="修改"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/myshop_shanc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/daoju_quxiao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_marginLeft="12dp"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>