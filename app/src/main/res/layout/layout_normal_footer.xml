<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/normal_footer_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/normal_footer_text" />

        <TextView
            android:id="@+id/normal_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="16dp"
            android:text="上拉" />

        <ImageView
            android:layout_marginRight="16dp"
            android:id="@+id/normal_footer_img_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/normal_footer_text"
            android:background="@mipmap/loadimg"
            android:visibility="gone" />

        <ImageView
            android:layout_marginRight="16dp"
            android:id="@+id/normal_footer_img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/normal_footer_text"
            android:background="@mipmap/refreshing"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>