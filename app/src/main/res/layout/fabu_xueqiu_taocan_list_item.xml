<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/line">
<LinearLayout
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/taocan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经济套餐"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/taocan_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥588"
        android:textColor="@color/vip_red"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市场价："
            android:textSize="11sp" />

        <TextView
            android:id="@+id/taocan_yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="11sp"/>
    </LinearLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/text_color_1"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/taocan_s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="· 适合个体会、工作室"
        android:singleLine="true"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/taocan_s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="· 至少3名钻石级以上设计师"
        android:singleLine="true"
        android:layout_margin="3dp"
        android:textSize="10sp"
    />
    <TextView
        android:id="@+id/taocan_s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="· 至少10个LOGO设计方案"
        android:singleLine="true"
       android:layout_marginLeft="3dp"
        android:textSize="10sp"
      />
    <Button
        android:id="@+id/taocan_btn_fa"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_taocan_bg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        style="?android:attr/borderlessButtonStyle"
        android:text="发布套餐需求"/>
</LinearLayout>
</LinearLayout>