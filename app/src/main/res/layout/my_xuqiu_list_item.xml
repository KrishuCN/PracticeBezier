<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="10dp"
      android:background="@drawable/linear_bg_white_yuan_jiao">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp">
          <TextView
              android:id="@+id/my_xuqiu_item_bianhao"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="编号:4252155"/>
          <TextView
              android:id="@+id/my_xuqiu_item_zhuangtai"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="圆满结束"
              android:layout_alignParentRight="true"
              android:textColor="#48CB79"/>
      </RelativeLayout>
      <TextView
          android:id="@+id/my_xuqiu_item_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="￥300"
          android:textColor="@color/vip_red"
          android:layout_marginLeft="10dp"
          android:textSize="16sp"/>
      <TextView
          android:id="@+id/my_xuqiu_item_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="房地产公司整体VIS视觉设计"
          android:textColor="@color/vip_back"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="10dp"
          android:textSize="17sp"
          android:singleLine="true"
          android:ellipsize="end"
          android:maxEms="16"/>
      <TextView
          android:id="@+id/my_xuqiu_item_gaisu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="需求概述：包括公司品牌logo/画册/名片/海报等设计师设计之前请和我们策划产品沟通"
          android:textSize="15sp"
          android:layout_margin="10dp"
          android:ellipsize="end"
          android:maxEms="18"
          android:maxLength="50"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/line"
          android:layout_margin="5dp"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginBottom="5dp"
              android:layout_centerVertical="true"
              android:orientation="horizontal">
              <Button
                  android:id="@+id/my_xuqiu_item_shanchu"
                  android:layout_width="wrap_content"
                  android:layout_height="35dp"
                  android:textSize="13sp"
                  android:text="删除订单"
                  android:textColor="#999999"
                  android:background="@drawable/btn_xuqiu_dele_bg"/>
              <Button
                  android:id="@+id/my_xuqiu_item_give_money"
                  android:layout_width="wrap_content"
                  android:layout_height="35dp"
                  android:text="托管赏金"
                  android:textColor="#F63834"
                  android:textSize="13sp"
                  android:background="@drawable/btn_xuqiu_give_money_bg"
                  android:layout_marginLeft="10dp"/>
          </LinearLayout>
      </RelativeLayout>
  </LinearLayout>
</LinearLayout>