<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackimg"
    android:orientation="vertical">

    <include layout="@layout/hide_zhuangtailan"></include>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:scaleType="center"
        android:src="@mipmap/back" />
     <TextView
         android:id="@+id/login_text_zhuce"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="43dp"
         android:layout_alignParentRight="true"
         android:textColor="@color/white"
         android:layout_marginRight="20dp"
         android:textSize="18sp"
         android:text="注册"/>
 </RelativeLayout>

    <ImageView
        android:id="@+id/login_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/login_defult_image"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <include

            layout="@layout/login_item" />

        <include layout="@layout/login_phone_item"

            android:visibility="gone"/>
    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/login_wjmm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:layout_centerVertical="true"
           android:text="@string/login_forget_pw"
           android:textColor="#ffffff" />
       <TextView
           android:id="@+id/login_qiehuan_yan"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:text="用账号密码登录"
           android:clickable="true"
           android:visibility="gone"
           android:textColor="#ffffff" />
       <TextView
           android:id="@+id/login_qiehuan_zhang"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:text="使用短信验证码登录"
           android:clickable="true"
           android:textColor="#ffffff" />
   </RelativeLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/login_btn_back" />

    <TextView
        android:id="@+id/login_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:text="@string/fast_login"
        android:textColor="#ffffff" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        android:id="@+id/login_ind"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        >
    </View>
    <Button
        android:id="@+id/qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/login_ind"
        android:background="@mipmap/qq" />
    <Button
        android:id="@+id/wechat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/login_ind"
        android:background="@mipmap/wechat" />

</RelativeLayout>


</LinearLayout>
